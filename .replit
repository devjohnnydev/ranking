[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "npx prisma db push --schema=server/prisma/schema.prisma && node server/index.js"]
build = ["bash", "-c", "npm install && npx prisma generate --schema=server/prisma/schema.prisma && npm run build"]
