generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Administrador {
  id         Int      @id @default(autoincrement())
  nome       String
  email      String   @unique
  senha_hash String
}

model Professor {
  id                  Int       @id @default(autoincrement())
  nome                String
  email               String    @unique
  senha_hash          String
  codigo_turma        String    @unique // CÃ³digo gerado automaticamente
  primeiro_acesso     Boolean   @default(true)
  
  turmas              Turma[]
  alunos              Aluno[]   @relation("ProfessorAlunos")
  missoes_criadas     Missao[]
  mensagens_enviadas  Mensagem[]
}

model Turma {
  id          Int      @id @default(autoincrement())
  nome        String
  materia     String?
  codigo      String   @unique // O mesmo codigo_turma do Professor
  
  professor   Professor @relation(fields: [professorId], references: [id], onDelete: Cascade)
  professorId Int
  
  alunos      Aluno[]
  atividades  Atividade[]
  missoes     Missao[]
  mensagens   Mensagem[]
}

model Aluno {
  id           Int      @id @default(autoincrement())
  nome         String
  data_criacao DateTime @default(now())
  
  professor    Professor @relation("ProfessorAlunos", fields: [professorId], references: [id], onDelete: Cascade)
  professorId  Int
  
  turma        Turma    @relation(fields: [turmaId], references: [id], onDelete: Cascade)
  turmaId      Int
  
  notas        Nota[]
  mensagens    Mensagem[] @relation("AlunoMensagens")
}

model Atividade {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String?
  nota_maxima Float    @default(10)
  data_criacao DateTime @default(now())
  
  turma       Turma    @relation(fields: [turmaId], references: [id], onDelete: Cascade)
  turmaId     Int
  
  notas       Nota[]
}

model Missao {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String
  recompensa  Int      @default(0)
  prazo       DateTime?
  data_criacao DateTime @default(now())
  
  turma       Turma    @relation(fields: [turmaId], references: [id], onDelete: Cascade)
  turmaId     Int
  
  professor   Professor @relation(fields: [professorId], references: [id], onDelete: Cascade)
  professorId Int
}

model Nota {
  id          Int      @id @default(autoincrement())
  valor       Float
  
  aluno       Aluno    @relation(fields: [alunoId], references: [id], onDelete: Cascade)
  alunoId     Int
  
  atividade   Atividade @relation(fields: [atividadeId], references: [id], onDelete: Cascade)
  atividadeId Int

  @@unique([alunoId, atividadeId])
}

model Mensagem {
  id           Int      @id @default(autoincrement())
  conteudo     String
  data_criacao DateTime @default(now())
  
  professor    Professor? @relation(fields: [professorId], references: [id], onDelete: Cascade)
  professorId  Int?
  
  aluno        Aluno?    @relation("AlunoMensagens", fields: [alunoId], references: [id], onDelete: Cascade)
  alunoId      Int?
  
  turma        Turma?    @relation(fields: [turmaId], references: [id], onDelete: Cascade)
  turmaId      Int?
}
